generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  NEW
  PAID
  FAILED
  FULFILLED
}

enum PaymentProvider {
  STRIPE
  NETOPIA
}

enum EventType {
  QR_SCAN
  PAGE_VIEW
  PAYMENT_SUCCESS
  PAYMENT_FAILED
}

model Hotel {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())

  screens Screen[]
  offers  Offer[]
  orders  Order[]
  events  Event[]
}

model Screen {
  id        String   @id @default(cuid())
  hotelId   String
  name      String
  qrSlug    String   @unique
  createdAt DateTime @default(now())

  hotel  Hotel   @relation(fields: [hotelId], references: [id])
  orders Order[]
}

model Offer {
  id               String   @id @default(cuid())
  hotelId          String
  title            String
  description      String?
  priceCents       Int
  currency         String   @default("RON")
  isActive         Boolean  @default(true)
  fulfillmentNotes String?  @db.Text
  createdAt        DateTime @default(now())

  hotel  Hotel   @relation(fields: [hotelId], references: [id])
  orders Order[]
}

model Order {
  id               String          @id @default(cuid())
  hotelId          String
  screenId         String?
  offerId          String?
  status           OrderStatus     @default(NEW)
  provider         PaymentProvider
  providerRef      String?         @unique
  amountCents      Int
  currency         String
  customerEmail    String?
  customerPhone    String?
  fulfillmentNotes String?         @db.Text
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @default(now()) @updatedAt

  hotel  Hotel   @relation(fields: [hotelId], references: [id])
  screen Screen? @relation(fields: [screenId], references: [id])
  offer  Offer?  @relation(fields: [offerId], references: [id])
  events Event[]
}

model Event {
  id        String    @id @default(cuid())
  hotelId   String
  screenId  String?
  offerId   String?
  orderId   String?
  type      EventType
  data      Json?
  createdAt DateTime  @default(now())

  hotel Hotel  @relation(fields: [hotelId], references: [id])
  order Order? @relation(fields: [orderId], references: [id])
}
