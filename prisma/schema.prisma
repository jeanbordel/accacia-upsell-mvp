generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  NEW
  PAID
  FAILED
  FULFILLED
}

enum PaymentProvider {
  STRIPE
  NETOPIA
  PAYU
}

enum EventType {
  QR_SCAN
  PAGE_VIEW
  PAYMENT_SUCCESS
  PAYMENT_FAILED
}

enum PaymentOwner {
  HOTEL
}

model Hotel {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())

  screens       Screen[]
  offers        Offer[]
  orders        Order[]
  events        Event[]
  paymentConfig HotelPaymentConfig?
}

model Screen {
  id        String   @id @default(cuid())
  hotelId   String
  name      String
  qrSlug    String   @unique
  createdAt DateTime @default(now())

  hotel  Hotel   @relation(fields: [hotelId], references: [id])
  orders Order[]
}

model Offer {
  id               String   @id @default(cuid())
  hotelId          String
  title            String
  description      String?
  priceCents       Int
  currency         String   @default("RON")
  isActive         Boolean  @default(true)
  fulfillmentNotes String?  @db.Text
  createdAt        DateTime @default(now())

  hotel  Hotel   @relation(fields: [hotelId], references: [id])
  orders Order[]
}

model Order {
  id               String          @id @default(cuid())
  hotelId          String
  screenId         String?
  offerId          String?
  status           OrderStatus     @default(NEW)
  provider         PaymentProvider
  providerRef      String?         @unique
  amountCents      Int
  currency         String
  customerEmail    String?
  customerPhone    String?
  fulfillmentNotes String?         @db.Text
  paymentOwner     PaymentOwner    @default(HOTEL)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @default(now()) @updatedAt

  hotel  Hotel   @relation(fields: [hotelId], references: [id])
  screen Screen? @relation(fields: [screenId], references: [id])
  offer  Offer?  @relation(fields: [offerId], references: [id])
  events Event[]
}

model Event {
  id        String    @id @default(cuid())
  hotelId   String
  screenId  String?
  offerId   String?
  orderId   String?
  type      EventType
  data      Json?
  createdAt DateTime  @default(now())

  hotel Hotel  @relation(fields: [hotelId], references: [id])
  order Order? @relation(fields: [orderId], references: [id])
}

model HotelPaymentConfig {
  id            String   @id @default(cuid())
  hotelId       String   @unique
  defaultPsp    PaymentProvider? // Which provider is active/default
  
  // Stripe configuration (TODO: encrypt in production)
  stripeSecret  String?
  stripeWebhook String?  // Optional per-hotel webhook secret
  
  // Netopia configuration (TODO: encrypt in production)
  netopiaSignature       String?
  netopiaTestMode        Boolean @default(true)
  netopiaHostedUrlTest   String?
  netopiaHostedUrlLive   String?
  netopiaPublicKeyPem    String?  @db.Text
  netopiaPrivateKeyPem   String?  @db.Text // WARNING: Should be in env/vault
  
  // PayU configuration (placeholder for future implementation)
  payuMerchantId String?
  payuSecret     String?
  payuEnv        String?  // "test" | "live"
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  hotel         Hotel    @relation(fields: [hotelId], references: [id])
}
